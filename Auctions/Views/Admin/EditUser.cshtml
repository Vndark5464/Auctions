@using Microsoft.AspNetCore.Identity
@model IdentityUser

<h2 id="editUserTitle">Edit User</h2>
<form aria-labelledby="editUserTitle" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input id="Email" type="email" class="form-control" name="Email" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="UserName">Username</label>
        <input id="UserName" type="text" class="form-control" name="UserName" value="@Model.UserName" required />
    </div>
    <button type="submit" class="btn btn-primary" aria-label="Update user details">Update</button>
</form>